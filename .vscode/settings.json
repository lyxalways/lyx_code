{
    "code-runner.ignoreSelection": true,
    "code-runner.saveFileBeforeRun": true,
    "code-runner.runInTerminal": true,
    "code-runner.preserveFocus": false,
    "markdownlint.config": {
        "default": true,
        "MD045": false,
        "MD012": false,
        "no-hard-tabs": false
    },
    "C_Cpp.errorSquiggles": "Disabled",
    "files.associations": {
        "array": "cpp",
        "tuple": "cpp",
        "utility": "cpp",
        "new": "cpp",
        "iostream": "cpp"
    }
}